generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  lastName    String
  userType    String       @default("general")
  handler     String       @unique
  biography   String
  email       String?      @unique
  exhibitions Exhibition[]
}

model Exhibition {
  id           String    @id @default(uuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  handler      String
  mainTitle    String
  url          String    @unique
  thumbnailUrl String?
  bannerUrl    String?
  spaceId      String
  startDate    DateTime?
  endDate      DateTime?
  status       String
  visibility   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
